{namespace FormFieldValidator}

{template .render}
	{@param? elementClasses: string}
	{@param? errorMessage: string}
	{@param fieldElement: html}
	{@param? status: string}
	<div class="form-field-validator{$elementClasses ? ' ' + $elementClasses : ''}{$status ? ' ' + $status : ''}">
		{$fieldElement}
		{if $errorMessage}
			<div class="form-validator-stack help-block">{$errorMessage}</div>
		{/if}
	</div>
{/template}